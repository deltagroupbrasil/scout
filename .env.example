# ==================================
# LeapScout - Environment Variables
# ==================================

# Database
# Development (SQLite - apenas para testes locais rápidos)
# DATABASE_URL="file:./dev.db"

# Production/Staging (PostgreSQL - RECOMENDADO)
DATABASE_URL="postgresql://user:password@localhost:5432/leapscout?schema=public"

# Opções de PostgreSQL para produção:
# - Local: postgresql://postgres:senha@localhost:5432/leapscout
# - Neon: postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/leapscout
# - Supabase: postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres
# - Railway: postgresql://postgres:pass@containers-us-west-xxx.railway.app:7164/railway
# - Vercel Postgres: postgres://default:pass@ep-xxx-pooler.us-east-1.postgres.vercel-storage.com/verceldb

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secret-key-min-32-characters"

# Cron Job Secret (para proteger endpoint de scraping)
CRON_SECRET="generate-a-random-secret-for-cron"

# API Keys

# Bright Data - Puppeteer Browser (Scraping LinkedIn, Gupy, Catho)
BRIGHT_DATA_PUPPETEER_URL="wss://brd-customer-hl_xxxxx-zone-scraping_browser1:password@brd.superproxy.io:9222"

# Bright Data - Web Unlocker (Requisições HTTP com bypass anti-bot para scraping de sites corporativos)
# Usado para scraping de páginas "Sobre Nós", "Equipe", "Liderança" das empresas
BRIGHT_DATA_WEB_UNLOCKER_URL="https://brd-customer-hl_xxxxx-zone-web_unlocker:password@brd.superproxy.io:22225"

# Bright Data - SERP API (Busca no Google Search para encontrar pessoas reais)
# Usado para buscar "CFO Empresa", "Finance Director Empresa", etc
BRIGHT_DATA_SERP_API_URL="https://api.brightdata.com/serp/v2/search"

# Claude AI (Insights e contatos sugeridos)
CLAUDE_API_KEY=""

# Contact Enrichment APIs

# Nova Vida TI - API Congonhas (Consultas CNPJ/CPF - R$ 0.06 por consulta)
# http://wsnv.novavidati.com.br/WSLocalizador.asmx
NOVA_VIDA_TI_USUARIO=""
NOVA_VIDA_TI_SENHA=""
NOVA_VIDA_TI_CLIENTE=""

# Hunter.io (Email finder - 50 buscas/mês no plano free)
HUNTER_IO_API_KEY=""

